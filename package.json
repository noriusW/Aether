{
  "name": "aether",
  "private": true,
  "version": "1.2.0-beta",
  "description": "Audio interface for SoundCloud",
  "author": "norius",
  "repository": {
    "type": "git",
    "url": "https://github.com/noriusW/Aether"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:electron": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.aether.music",
    "productName": "Aether",
    "directories": {
      "output": "dist_electron"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "noriusW",
        "repo": "Aether"
      }
    ],
    "win": {
      "icon": "icon.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Aether"
    },
    "mac": {
      "icon": "icon.png"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "icon.png"
    ]
  },
  "dependencies": {
    "@ryuziii/discord-rpc": "^1.0.1-rc.1",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "framer-motion": "^12.26.1",
    "idb-keyval": "^6.2.2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.4.0",
    "electron-updater": "^6.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
